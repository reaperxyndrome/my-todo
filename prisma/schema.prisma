generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @default("New Task")
  description String   @default("New Description")
  complete    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}